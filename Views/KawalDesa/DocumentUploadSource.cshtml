<div class="alert alert-info" style="font-size: small; padding: 5px 20px; margin-bottom: 0px;" ng-show="indexCtrl.activeUpload">
    Sumber: <a class="btn btn-primary btn-xs" href="#" ng-click="activeUploadMore = !activeUploadMore">
        &nbsp;
        <i ng-class="activeUploadMore ? 'fa-minus' : 'fa-plus'" class="fa"></i>
        {{indexCtrl.activeUpload.DocumentName}}
    </a>
    <span>
        <span ng-repeat="source in indexCtrl.activeSources">
            <a href="/Content/files/{{source.File.RelativeFileName}}">{{source.File.Name}}</a>
            {{$last ? '' : ', '}}
        </span>
    </span>
    <div ng-show="activeUploadMore">
        <br />
        <dl class="dl-horizontal">
            <dt>Keterangan</dt>
            <dd>{{indexCtrl.activeUpload.Notes}}</dd>
            <dt>Pengunggah</dt>
            <dd><a href="/u/{{indexCtrl.activeUpload.fkCreatedById}}">{{indexCtrl.activeUpload.CreatedBy.Name}}</a></dd>
            <dt>Tanggal Unggah</dt>
            <dd>{{indexCtrl.activeUpload.DateCreated | date:'dd MMM yyyy, HH:mm:ss'}}</dd>
            <dt>Organisasi</dt>
            <dd><a href="/orgs/{{indexCtrl.activeUpload.fkOrganizationId}}">{{indexCtrl.activeUpload.Organization.Name}}</a></dd>
        </dl>
        <a href="#" ng-click="indexCtrl.openGoogleSheet()" class="btn btn-default">
            <span ng-show="!indexCtrl.isLoadingUrl">
                <i class="fa fa-table"></i> Buka di Google Sheet
            </span>
            <span ng-show="indexCtrl.isLoadingUrl">
                Membuat dokumen...
            </span>
        </a>
    </div>
</div>
<div class="alert alert-info" style="font-size: small; padding: 5px 20px; margin-bottom: 0px;" ng-show="!indexCtrl.activeUpload">
    Data belum terisi. <a href="#" class="btn btn-default" ng-click="indexCtrl.modal('#document-upload-modal', 'show')" ng-if="indexCtrl.isInRoleAndScope('volunteer_allocation', indexCtrl.activeUploadRegionId)"> <i class="fa fa-upload"></i> Unggah dokumen</a>
    <span ng-if="indexCtrl.activeSources.length">
        Sumber: 
        <span ng-repeat="source in indexCtrl.activeSources">
            <a href="/Content/files/{{source.File.RelativeFileName}}">{{source.File.Name}}</a>
            {{$last ? '' : ', '}}
        </span>
    </span>
</div>

