@{
    Layout = "_Layout.cshtml";
}

<div ng-controller="OrganizationIndexCtrl as organizationIndexCtrl" ng-if="indexCtrl.type == 'org_index'">

    <div class="container-fluid alert">Daftarkan organisasi Anda dengan di <a href="#">sini</a></div>

    <div class="content-header">
        Daftar Organisasi
    </div>

    <div class="table-responsive">
        <table class="table table-condensed table-responsive table-bordered">
            <thead>
                <tr>
                    <th style="text-align: left;">Nama</th>
                    <th style="text-align: left;">Deskripsi</th>
                    <th style="text-align: left;" ng-if="indexCtrl.isInRole('admin')">Admin</th>
                    <th style="text-align: left;" ng-if="indexCtrl.isInRole('admin')">Edit</th>
                    <th style="text-align: left;" ng-if="indexCtrl.isInRole('admin')">Tambah Admin</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="org in organizationIndexCtrl.organizations">
                    <td style="text-align: left;">
                        {{org.Name}}
                    </td>
                    <td style="text-align: left;">
                        {{org.Description}}
                    </td>
                    <td style="text-align: left;">
                        {{org.Description}}
                    </td>
                </tr>
            </tbody>
            <tfoot>
                <tr class="">
                    <td colspan="5"><a class="btn btn-primary btn-xs" href="#" ng-click="organizationIndexCtrl.addOrganization()">Tambah</a></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="modal fade" id="organization-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">{{organizationIndexCtrl.selected.Name}}</h4>
                </div>
                <div class="modal-body">
                    <form role="form">
                        <div class="form-group">
                            <label>Nama</label>
                            <input type="text" ng-model="organizationIndexCtrl.selected.Name" placeholder="Nama organisasi">
                        </div>
                        <div class="form-group">
                            <label>Deskripsi</label>
                            <input type="text" ng-model="organizationIndexCtrl.selected.Description" placeholder="Deskripsi organisasi">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
                    <button type="button" class="btn btn-primary" ng-click="organizationIndexCtrl.saveOrganization()">Simpan</button>
                </div>
            </div>
        </div>
    </div>

</div>
